<% include ../partials/header %>

<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">Edit Task</h1>
    </div><!-- ./panel-heading -->

    <div class="panel-body">
      <form action="/tasks/<%= task._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="task[content]" placeholder="What needs to be done?" value="<%= task.content %>">
        </div>
        <div class="form-group">
          <input class="btn btn-primary pull-right" type="submit" value="Update Task">
        </div>
      </form>
    </div><!-- ./panel-body -->
    <div class="panel-footer">
      Task ID: <%= task._id %>
    </div><!-- ./panel-footer -->
  </div><!-- ./panel -->

  <a href="/tasks/<%= task._id %>">< back to task</a>
</div><!-- ./col -->

<% include ../partials/footer %>